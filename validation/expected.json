{
  "version": "1.0.0",
  "description": "Golden test data for Hypesilico validation. Update with real wallet data when available.",
  "health_tests": {
    "health": {
      "endpoint": "/health",
      "expected_status": 200,
      "expected_body": "ok"
    },
    "ready": {
      "endpoint": "/ready",
      "expected_status": 200,
      "expected_body": "ready"
    }
  },
  "error_tests": {
    "pnl_missing_user": {
      "description": "PnL endpoint without required user parameter",
      "endpoint": "/v1/pnl",
      "params": {},
      "expected_status": 400
    },
    "trades_missing_user": {
      "description": "Trades endpoint without required user parameter",
      "endpoint": "/v1/trades",
      "params": {},
      "expected_status": 400
    },
    "positions_missing_user": {
      "description": "Positions endpoint without required user parameter",
      "endpoint": "/v1/positions/history",
      "params": {},
      "expected_status": 400
    },
    "deposits_missing_user": {
      "description": "Deposits endpoint without required user parameter",
      "endpoint": "/v1/deposits",
      "params": {},
      "expected_status": 400
    },
    "pnl_invalid_user": {
      "description": "PnL endpoint with invalid address format",
      "endpoint": "/v1/pnl",
      "params": {
        "user": "not-a-valid-address"
      },
      "expected_status": 400
    },
    "leaderboard_missing_metric": {
      "description": "Leaderboard endpoint without required metric parameter",
      "endpoint": "/v1/leaderboard",
      "params": {},
      "expected_status": 400
    },
    "leaderboard_invalid_metric": {
      "description": "Leaderboard endpoint with invalid metric value",
      "endpoint": "/v1/leaderboard",
      "params": {
        "metric": "invalid_metric"
      },
      "expected_status": 400
    },
    "nonexistent_endpoint": {
      "description": "Request to non-existent endpoint",
      "endpoint": "/v1/nonexistent",
      "params": {},
      "expected_status": 404
    }
  },
  "test_users": [
    {
      "address": "0x0000000000000000000000000000000000000001",
      "description": "Placeholder test wallet 1 - update with real address",
      "tests": {
        "pnl": {
          "params": {},
          "expected": {
            "has_fields": ["realizedPnl", "returnPct", "feesPaid", "tradeCount"]
          }
        },
        "pnl_with_coin": {
          "params": {
            "coin": "BTC"
          },
          "expected": {
            "has_fields": ["realizedPnl", "returnPct", "feesPaid", "tradeCount"]
          }
        },
        "pnl_builder_only": {
          "params": {
            "builderOnly": "true"
          },
          "expected": {
            "has_fields": ["realizedPnl", "returnPct", "feesPaid", "tradeCount"]
          }
        },
        "trades": {
          "params": {},
          "expected": {
            "has_fields": ["trades"]
          }
        },
        "trades_with_coin": {
          "params": {
            "coin": "BTC"
          },
          "expected": {
            "has_fields": ["trades"]
          }
        },
        "positions_history": {
          "params": {},
          "expected": {
            "has_fields": ["snapshots"]
          }
        },
        "deposits": {
          "params": {},
          "expected": {
            "has_fields": ["totalDeposits", "depositCount", "deposits"]
          }
        }
      }
    }
  ],
  "leaderboard_tests": [
    {
      "description": "PnL leaderboard",
      "params": {
        "metric": "pnl"
      },
      "expected": {
        "is_array": true
      }
    },
    {
      "description": "Volume leaderboard",
      "params": {
        "metric": "volume"
      },
      "expected": {
        "is_array": true
      }
    },
    {
      "description": "Return percentage leaderboard",
      "params": {
        "metric": "returnPct"
      },
      "expected": {
        "is_array": true
      }
    },
    {
      "description": "PnL leaderboard with builderOnly",
      "params": {
        "metric": "pnl",
        "builderOnly": "true"
      },
      "expected": {
        "is_array": true
      }
    }
  ],
  "validation_config": {
    "decimal_tolerance_places": 2,
    "timeout_seconds": 30
  }
}
